generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id          Int           @id @default(autoincrement())
  shopDomain  String        @unique
  accessToken String
  scope       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  settings    ShopSettings?

  discounts Discount[]
}

model Discount {
  id              Int       @id @default(autoincrement())
  shopId          Int
  shop            Shop      @relation(fields: [shopId], references: [id])
  code            String    @unique
  amount          Float?
  type            String?
  expiresAt       DateTime?
  createdAt       DateTime  @default(now())
  syncedToShopify Boolean   @default(false)
  redeemedAt      DateTime?
  orderId         String?
  orderAmount     Float?
}

model ShopSettings {
  id            Int      @id @default(autoincrement())
  shopId        Int      @unique
  discountType  String   @default("percentage") // "percentage" or "fixed"
  discountValue Float    @default(10)
  expiryDays    Int? // number of days discount is valid
  maxDiscounts  Int? // limit total discount codes
  appliesTo     String? // e.g., "all", "collections:123,456", etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id])
}
