generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id          Int       @id @default(autoincrement())
  shopDomain  String    @unique
  accessToken String
  scope        String? 
  installed    Boolean   @default(false) 
  uninstalledAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  settings     ShopSettings? 
  discounts   Discount[]
}

model Discount {
  id             Int       @id @default(autoincrement())
  shopId         Int
  shop           Shop      @relation(fields: [shopId], references: [id])
  code           String    @unique
  amount         Float?
  type           String?
  expiresAt      DateTime?
  createdAt      DateTime  @default(now())
  syncedToShopify Boolean  @default(false)
  redeemedAt     DateTime?
  orderId        String?
  orderAmount    Float?

  userId         String
  email          String?

  active          Boolean   @default(true)

}


model ShopSettings {
  id                 Int       @id @default(autoincrement())
  shopId             Int       @unique
  shop               Shop      @relation(fields: [shopId], references: [id])

  discountType       String    @default("percentage")
  discountValue      Float     @default(10)

  categories         String[]  @default([]) // product category handles

  oneTimeUse         Boolean   @default(true)

  allowedCountries   String[]  @default([]) 
  allowedMemberTypes String[]  @default([])

  expiryDays         Int?      
  maxDiscounts       Int?      

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}